@model IEnumerable<Mvc_auction.Models.User>
@*@model IEnumerable<Mvc_auction.Models.UsersModel>*@
           

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";  
   
}

<h2>List of Users
<img alt="user" src="../../Content/images/identity.ico" width="60px" />
</h2>

<table>
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>Name</th>
         <th>Last name</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.mail)
        </td>
        <td>
         @Html.DisplayFor(model => item.name)
        </td>
        <td>
         @Html.DisplayFor(model => item.lastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.user_id /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { id=item.user_id/* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.user_id })
        </td>
    </tr>
}

</table>
