@model Mvc_auction.Models.Lot
@{
    ViewBag.Title = "Edit lot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit  @Html.DisplayFor(modelItem => Model.Name)
</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Lot", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="post">
            <h2 class="title">
                @Html.DisplayFor(modelItem => Model.Name)
            </h2>
            <p class="meta">
                Posted by <a href="#">@Html.DisplayFor(modelItem => Model.Owner_id)</a>
                @Html.ActionLink("Details", "Details", new { id = Model.Id })
            </p>
            <div class="entry">
                <p>
                    <img src=@Html.DisplayFor(modelItem => Model.Picture) width="200"  alt="" class="alignleft border" id="LotImage" />
                    <span class="editor-field"></span>
                </p>
                <div>
                    <table>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Name)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Description)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Price)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.EditorFor(model => model.Price)
                                    @Html.ValidationMessageFor(model => model.Price)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Picture)
                                </label>
                                @Html.HiddenFor(model => model.Picture)
                            </td>
                            <td>
                                <span class="editor-field">
                                    <input type="file" name="fileUpload" /><br />
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.StartTime)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.DisplayFor(model => model.StartTime)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.DateEnd)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.DisplayFor(model => model.DateEnd)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Owner_id)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.DisplayFor(model => model.Owner_id)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="editor-label">
                                    @Html.LabelFor(model => model.Category_id)
                                </label>
                            </td>
                            <td>
                                <span class="editor-field">
                                    @Html.EditorFor(model => model.Category_id)
                                    @Html.ValidationMessageFor(model => model.Category_id)
                                </span>
                            </td>
                        </tr>
                    </table>
                    <p>
                        <input type="submit" value="Save" />
                    </p>
                </div>
            </div>
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
