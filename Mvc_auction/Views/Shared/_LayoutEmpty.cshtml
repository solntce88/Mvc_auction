<h2>_LayoutEmpty</h2>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header-wrapper">
            <div id="header">
                <div id="logo">
                    <h1>
                        <a href="#">@System.Configuration.ConfigurationManager.AppSettings["SiteName"]</a></h1>
                </div>
            </div>
        </div>
        <!-- end #header -->
        <div id="menu">
            <ul>
                @*    <li class="current_page_item"><a href="#">Homepage</a></li>*@
                <li class="current_page_item">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="current_page_item">@Html.ActionLink("About", "About", "Home")</li>
                @* <li >@Html.ActionLink("Users", "Index", "User")</li>*@
            </ul>
        </div>
        <!-- end #menu -->
        <div id="page">
            <div id="page-bgtop">
                <div id="page-bgbtm">
                    <div id="content">
                        @RenderBody()
                       
                    </div>
                    <div id="sidebar">
                        <ul>
                            <li>
                                <h2>
                                    Описание сайта</h2>
                                <p>
                                    На нашем сайте Вы можете разместить свои лоты, для этого вам необходимо регегистрироваться.</p>
                            </li>
                            
                           
                        </ul>
                    </div>
                    <!-- end #sidebar -->
                    <div style="clear: both;">
                    </div>
                </div>
            </div>
        </div>
        <!-- end #page -->
    </div>
    <div id="footer">
        <p>
            Copyright (c) 2012. All rights reserved.
        </p>
    </div>
    <!-- end #footer -->
</body>
</html>
